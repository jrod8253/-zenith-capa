<div class="container">
  <div class="col-md-12">
    <%# Title to create a new corrective aciton%>
    <h1>Update a Corrective Action</h1>

    <%# use simple form to create title, description, status, severity, source,%>
    <div class="conatiner-md">
      <%= simple_form_for @corrective_action do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :date_opened, as: :date, html5: true %>
        <%= f.input :status, collection: [['Open', true], ['Closed', false]], prompt: 'Select Status' %>
        <%= f.input :severity, collection: ['Level 1 - Basic', 'Level 2 - Intermediate', 'Level 3 - Advanced'], include_blank: false, label: "Type/Severity" %>
        <%= f.input :source, collection: ['Customer Complaint', 'Internal Quality', 'Supplier Non-Conformance', 'Internal Audit', 'External Audit', 'Process Performance KPI', 'Continuous Improvement Project', 'Other...'], include_blank: false %>
        <%= f.button :submit, "Update Corrective Action", class: "btn btn-primary"%>
      <% end %>
    </div>

    <% if @corrective_action.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@corrective_action.errors.count, "error") %> prohibited this corrective action from being saved:</h2>
        <ul>
        <% @corrective_action.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<%# Add a break between the two conatiners%>
<br>
<div class="container">
  <div class="col-md-12">
    <%= link_to 'Back to Corrective Actions', corrective_actions_path, class: "btn btn-secondary" %>
  </div>
</div>
