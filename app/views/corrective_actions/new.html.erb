<%# Title to create a new corrective aciton%>
<h1>Create a new Corrective Action</h1>

<%# use simple form to create title, description, status, severity, source,%>

<div class="conatiner-md">
  <%= simple_form_for @corrective_action do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :status %>
    <%= f.input :severity %>
    <%= f.input :source %>
    <%= f.button :submit %>
  <% end %>
</div>

<% if @corrective_action.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@corrective_action.errors.count, "error") %> prohibited this corrective action from being saved:</h2>
    <ul>
    <% @corrective_action.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= link_to 'Back to Corrective Actions', corrective_actions_path %>
